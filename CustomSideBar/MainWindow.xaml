<Window x:Class="CustomSideBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomSideBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="400" Left="0" Top="0">
  <Grid x:Name="Root" Background="Black" >
    <Grid.RowDefinitions>
      <RowDefinition Height="50"></RowDefinition>
      <RowDefinition Height="1*"></RowDefinition>
    </Grid.RowDefinitions>
    <Button Grid.Row="0" Click="CloseClicked" FontSize="20">Close</Button>
    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
      <StackPanel x:Name="DocItemsPanel">
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Window>
